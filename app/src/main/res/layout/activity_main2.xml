<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6ecff"
    android:orientation="vertical"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
    <TextView
        android:id="@+id/topLabel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Welcome Simon Says"
        android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Level: "
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/high_score"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@null"
            android:text="Ranking"
            android:textAllCaps="false"
         />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/info"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@null"
            android:text="Info"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=""
        android:textSize="20dp" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leftTop"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rightTop"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/rrt"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leftBottom"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rlb" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rightBottom"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rrb" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/slow"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#e6ecff"
            android:gravity="center"
            android:text="Slow"
            android:textAllCaps="false"
            android:textSize="15dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/normal"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#e6ecff"
            android:gravity="center"
            android:text="Normal"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:textSize="15dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fast"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#e6ecff"
            android:gravity="center"
            android:text="Fast"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:textSize="15dp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#3d0055"
        android:gravity="center"
        android:text="START"
        android:textColor="@color/white"
        android:textSize="30dp" />

</LinearLayout>